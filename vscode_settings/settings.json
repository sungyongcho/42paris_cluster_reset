{
  // Editor
  "editor.minimap.enabled": false,
  "editor.suggestSelection": "first",
  "editor.tabSize": 4,
  "editor.detectIndentation": false,
  "editor.insertSpaces": false,
  "editor.renderWhitespace": "all",
  "editor.mouseWheelZoom": false,
  "editor.quickSuggestions": { "strings": true },
  "editor.renderControlCharacters": true,

  // Terminal
  "terminal.integrated.fontFamily": "MesloLGS NF",
  "terminal.integrated.fontSize": 14,
  "terminal.external.linuxExec": "iterm",
  "terminal.external.osxExec": "iTerm2.app",

  // Workbench
  "workbench.colorCustomizations": {
    "terminal.foreground": "#eceef0",
    "terminal.background": "#263137",
    "terminal.ansiBlack": "#546d79",
    "terminal.ansiBlue": "#40c4fe",
    "terminal.ansiCyan": "#64fcda",
    "terminal.ansiGreen": "#69f0ad",
    "terminal.ansiMagenta": "#ff3f80",
    "terminal.ansiRed": "#ff5151",
    "terminal.ansiWhite": "#fefefe",
    "terminal.ansiYellow": "#ffd73f",
    "terminal.ansiBrightBlack": "#b0bec4",
    "terminal.ansiBrightBlue": "#80d7fe",
    "terminal.ansiBrightCyan": "#a7fdeb",
    "terminal.ansiBrightGreen": "#b9f6c9",
    "terminal.ansiBrightMagenta": "#ff80ab",
    "terminal.ansiBrightRed": "#ff8980",
    "terminal.ansiBrightWhite": "#fefefe",
    "terminal.ansiBrightYellow": "#ffe47e"
  },
  "workbench.iconTheme": "vscode-icons",
  "workbench.editor.showTabs": "multiple",
  "workbench.startupEditor": "newUntitledFile",

  // Files
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.associations": {
    "*.c": "c",
    "*.h": "c",
    "*.cpp": "cpp",
    "*.hpp": "cpp",
    "*.mdx": "markdown",
    "*.css": "tailwindcss"
  },

  // Explorer
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,

  // C/C++
  "C_Cpp.default.cppStandard": "c++98",
  "C_Cpp.default.cStandard": "c11",
  "C_Cpp.default.compilerPath": "/usr/bin/gcc",
  "C_Cpp.default.intelliSenseMode": "macos-clang-arm64",

  // Extensions
  "vsicons.dontShowNewVersionMessage": true,
  "C_Cpp.intelliSenseEngineFallback": "enabled",

  // Language-specific settings
  // JavaScript
  "[javascript][typescript][vue]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    },
    "editor.formatOnSave": false,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    "diffEditor.ignoreTrimWhitespace": false
  },

  // JSON
  "[json][jsonc]": {
    "editor.formatOnSave": true,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // HTML
  "[html]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "vscode.html-language-features"
  },

  // TypeScript
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },

  // TypeScriptReact
  "[typescriptreact]": {
    "editor.formatOnSave": true,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },

  // Python
  "[python]": {
    // "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    },
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  // "ruff.importStrategy": "fromEnvironment",
  // "ruff.lineLength": 88,
  // "ruff.interpreter": [
  //   "/Users/wwaya/Documents/miniconda3/envs/matcha-fastapi/bin/python"
  // ],
  // Other settings
  "http.proxySupport": "off",
  "debug.onTaskErrors": "abort",

  // GitHub Copilot
  "github.copilot.enable": {
    "*": false,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },

  // LeetCode
  "leetcode.defaultLanguage": "python3",
  "leetcode.workspaceFolder": "/Users/wwaya/.leetcode",

  // Zoom level
  "window.zoomLevel": 1,
  "codeium.enableConfig": {
    "*": false
  },
  "git.openRepositoryInParentFolders": "never",
  "solidity.telemetry": true,
  "terminal.integrated.inheritEnv": false,
  "black-formatter.showNotifications": "always",
  "javascript.updateImportsOnFileMove.enabled": "never",

  // tailwind css

  //ocaml
  "[ocaml]": {
    "editor.tabSize": 2,
    "editor.rulers": [80],
    "editor.formatOnSave": true
  },
  "[ocaml.interface]": {
    "editor.tabSize": 2,
    "editor.rulers": [80],
    "editor.formatOnSave": true
  },
  "makefile.configureOnOpen": true,
  "dart.flutterSdkPath": "/Users/wwaya/development/flutter",
  "dart.openDevTools": "flutter",
  "dart.previewHotReloadOnSaveWatcher": true,
  "[dart]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true,
    "editor.detectIndentation": false,
    "editor.suggest.insertMode": "replace",
    "editor.defaultFormatter": "Dart-Code.dart-code",
    "editor.inlayHints.enabled": "offUnlessPressed"
  },
  "workbench.editor.enablePreview": false,
  "cmake.showOptionsMovedNotification": false,
  "cmake.pinnedCommands": [
    "workbench.action.tasks.configureTaskRunner",
    "workbench.action.tasks.runTask"
  ]
}
